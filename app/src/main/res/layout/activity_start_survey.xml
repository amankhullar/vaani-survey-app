<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ico_mic" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnSpeak"
            android:layout_alignLeft="@+id/btnSpeak"
            android:layout_alignTop="@+id/btnSpeak"
            android:layout_alignEnd="@+id/btnSpeak"
            android:layout_alignRight="@+id/btnSpeak"
            android:layout_alignBottom="@+id/btnSpeak"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="3dp"
            android:text="tap_on_mic"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="normal" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Say"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/txtSpeechInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reponse"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/outputTex"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textColor="#E91E63"
            android:textSize="18dp"
            android:textStyle="normal" />
    </LinearLayout>


</RelativeLayout>